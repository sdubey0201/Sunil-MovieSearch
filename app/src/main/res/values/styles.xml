<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.Light.SearchView">
        <item name="android:textColorHint">@color/hint_color</item>
    </style>

    <style name="movieListTitleStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/list_text_color</item>
    </style>

    <style name="movieDescSubTitleStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/list_text_color</item>
    </style>

    <style name="movieDescTitleStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/list_text_color</item>
    </style>

</resources>